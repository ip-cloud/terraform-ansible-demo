variable "do_token" {}
variable "app_type" {}
variable "github_url" {}

# Configure the DigitalOcean Provider
provider "digitalocean" {
  token = "${var.do_token}"
}

# Create an SSH Key
resource "digitalocean_ssh_key" "default" {
  name       = "Terraform SSH Key"
  public_key = "${file("~/.ssh/id_rsa.pub")}"
}

# Create a web server
resource "digitalocean_droplet" "docker" {
    image  = "ubuntu-16-04-x64"
    name   = "docker"
    region = "ams3"
    size   = "512mb"
    ssh_keys = ["${digitalocean_ssh_key.default.id}"]

    provisioner "local-exec" {
        command = "sleep 10"
    }

    provisioner "local-exec" {
        command = "touch inventory"
    }
    provisioner "local-exec" {
        command = "echo '[docker:vars]\ndocker_repo_url=${var.github_url}\nssh_username=root\nansible_user=root\n[docker]\n${self.ipv4_address}\n' > inventory"
    }
    provisioner "remote-exec" {
        inline = [
            "apt-get update",
            "apt-get install -y python"
        ]
        connection {
            type     = "ssh"
            user     = "root"
            private_key = "${file("~/.ssh/id_rsa")}"
          }
    }

    provisioner "local-exec" {
        command = "ansible-playbook -i inventory playbooks/${var.app_type}.yml"
    }

}